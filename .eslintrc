{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "plugins": ["async-await"],
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "script"
    },
    "rules": {
        "async-await/space-after-async": 1,
        "async-await/space-after-await": 1,
        "indent": [1, "tab", {
            "SwitchCase": 1
        }],
        "no-console": 1,
        "no-const-assign": 1,
        "no-eval": 0,
        "no-extra-boolean-cast": 0,
        "no-tabs": 0,
        "no-trailing-spaces": [1, { "ignoreComments": true }],
        "no-unused-vars": 1,
        "no-var": 1,
        "one-var": 0,
        "prefer-const": 1,
        "semi": [1, "always"],
        "spaced-comment": 1,
        "yoda": 0
    }
}
